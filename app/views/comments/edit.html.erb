<div class="container">
  <h1>Edit Comment:</h1>
  <%= form_for [@article, @comment] do |f| %>
      <div class="form-inline">
        <%= f.text_field :content, label: 'Comment', size: '100x10', required: true %>
        <%= f.button :submit, class: 'btn btn-success' %>
      </div>
  <% end %>
</div>
