<div class="container">
  <h1>Articles</h1>

  <table class="table table-responsive">
    <thead>
      <tr>
        <th>Title</th>
        <th>Created At</th>
        <th>Author</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= time_ago_in_words(article.created_at) %></td>
          <td><%= article.user.email %></td>
          <td><%= @markdown.render(article.body).html_safe %></td>
          <td><%= link_to 'Show', article %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
